{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Remind Me | ذكرني",
    "description": "Stay connected to Allah in every moment of your day.",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "host_permissions": [
        "https://api.alquran.cloud/",
        "http://api.quran-tafseer.com/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "alarms",
        "notifications",
        "storage"
    ],
    "chrome_url_overrides": {
        "newtab": "newtab/newtab.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{12345678-1234-4abc-9abc-0123456789ab}"
        }
    }
}